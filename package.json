{
  "name": "gradual",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*",
      "tooling/*"
    ],
    "catalog": {
      "react-hook-form": "^7.71.1",
      "typescript": "^5.9.3",
      "zod": "^4.3.5",
      "@types/node": "^25.0.3",
      "@remixicon/react": "^4.8.0"
    },
    "catalogs": {
      "tailwind": {
        "tailwindcss": "^4.1.18",
        "@tailwindcss/vite": "^4.1.18",
        "@tailwindcss/postcss": "^4.1.18",
        "postcss": "^8.5.6"
      },
      "better-auth": {
        "better-auth": "^1.5.0",
        "@better-auth/cli": "^1.4.20",
        "@better-auth/expo": "^1.5.0",
        "@polar-sh/better-auth": "^1.6.3",
        "@polar-sh/sdk": "^0.42.1",
        "@better-auth/infra": "^0.1.8"
      },
      "trpc": {
        "@trpc/client": "^11.8.1",
        "@trpc/server": "^11.8.1",
        "@trpc/tanstack-react-query": "^11.8.1"
      },
      "tanstack": {
        "@tanstack/react-query": "^5.90.16",
        "@tanstack/react-form": "^1.27.7",
        "@tanstack/react-router": "^1.146.0",
        "@tanstack/react-router-devtools": "^1.146.0",
        "@tanstack/react-router-ssr-query": "^1.146.0",
        "@tanstack/react-start": "^1.146.0"
      },
      "vite": {
        "vite": "^7.3.1",
        "@vitejs/plugin-react": "^5.1.2",
        "vite-tsconfig-paths": "^5.1.4"
      },
      "react": {
        "@types/react": "^19.2.7",
        "@types/react-dom": "^19.2.3",
        "react": "^19.2.3",
        "react-dom": "^19.2.3"
      }
    }
  },
  "scripts": {
    "build": "turbo run build",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo run clean",
    "auth:generate": "bun -F @gradual/auth generate",
    "db:push": "turbo -F @gradual/db push",
    "db:studio": "turbo -F @gradual/db studio",
    "dev": "turbo watch dev --continue",
    "typecheck": "turbo run typecheck",
    "ui-add": "turbo run ui-add",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "prepare": "husky",
    "postinstall": "bun run fix",
    "check": "bun x ultracite@latest check",
    "fix": "bun x ultracite@latest fix",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build --filter='@gradual-so/*' && changeset publish"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@turbo/gen": "^2.5.8",
    "dotenv-cli": "^10.0.0",
    "husky": "^9.1.7",
    "turbo": "^2.5.8",
    "typescript": "catalog:",
    "ultracite": "7.0.9"
  },
  "engines": {
    "node": "^22.21.0"
  },
  "packageManager": "bun@1.2.14",
  "dependencies": {
    "motion": "^12.29.0",
    "zustand": "^5.0.10"
  }
}
